<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_crear_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".CrearListaActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo_crear_lista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear nueva lista"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre de la lista -->
    <EditText
        android:id="@+id/et_nombre_lista"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nombre de la lista"
        android:inputType="textCapWords"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_crear_lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Descripción -->
    <EditText
        android:id="@+id/et_descripcion_lista"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Descripción"
        android:inputType="textCapSentences"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/et_nombre_lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_guardar_lista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar lista"
        app:layout_constraintTop_toBottomOf="@id/et_descripcion_lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
