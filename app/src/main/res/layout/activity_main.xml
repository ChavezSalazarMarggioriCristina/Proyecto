<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú Principal ShopList"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Botón Crear Lista -->
        <Button
            android:id="@+id/btn_crear_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Lista"
            android:backgroundTint="#9b59b6"
            android:textColor="#ffffff" />

        <!-- Botón Ver Detalle de Lista -->
        <Button
            android:id="@+id/btn_lista_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Detalle de Lista"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8e44ad"
            android:textColor="#ffffff" />

        <!-- Botón Crear Producto -->
        <Button
            android:id="@+id/btn_crear_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Producto"
            android:layout_marginTop="16dp"
            android:backgroundTint="#7d3c98"
            android:textColor="#ffffff" />

        <!-- Botón Categorías -->
        <Button
            android:id="@+id/btn_categorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6c3483"
            android:textColor="#ffffff" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón Cerrar Sesión -->
        <Button
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="#e74c3c"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
